# Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# Server Configuration
PORT=8765
SPRING_PROFILES_ACTIVE=dev

# Database Configuration (REQUIRED)
MONGODB_URI=mongodb://localhost:27017/edulink_dev

# JWT Security (REQUIRED - Use strong secrets in production)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=36000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO

# Email Configuration (Optional)
MAIL_ENABLED=false
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME=Your App Name
APPOINTMENT_EMAIL_NOTIFICATIONS=false

# Feature Flags (Optional)
FEATURE_RECURRING_APPOINTMENTS=true
FEATURE_APPOINTMENT_ATTACHMENTS=true
FEATURE_VIDEO_MEETINGS=false
FEATURE_CALENDAR_SYNC=false
FEATURE_APPOINTMENT_ANALYTICS=true
FEATURE_SMART_SCHEDULING=false

# Integration Settings (Optional)
ZOOM_INTEGRATION_ENABLED=false
ZOOM_API_KEY=your-zoom-api-key
ZOOM_API_SECRET=your-zoom-api-secret

GOOGLE_CALENDAR_ENABLED=false
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

TEAMS_INTEGRATION_ENABLED=false
TEAMS_CLIENT_ID=your-teams-client-id
TEAMS_CLIENT_SECRET=your-teams-client-secret